{
  // https://github.com/tsconfig/bases#recommended-tsconfigjson
  "extends": "@tsconfig/recommended/tsconfig.json",

  "compilerOptions": {
    "target": "ESNext",
    // typescript options here
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    // "declarationMap": true,
    // "noImplicitReturns": false,
    "resolveJsonModule": true,
    
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
    },
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules"]
}
